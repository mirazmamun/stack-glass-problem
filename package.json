{
  "name": "stack-glass-problem",
  "description": "Solving amount of water dispensed in glasses stacked in triangular pattern",
  "version": "1.0.0",
  "author": "Miraz Al-Mamun <mirazmamun@yahoo.com> (https://codarrior.mirazalmamun.xyz)",
  "ava": {
    "failFast": true,
    "verbose": true,
    "helpers": [
      "test/helpers/**/*"
    ]
  },
  "bugs": {
    "url": "https://github.com/mirazmamun/stack-glass-problem/issues",
    "email": "mirazmamun@yahoo.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Miraz Al-Mamun <mirazmamun@yahoo.com> (https://codarrior.mirazalmamun.xyz)"
  ],
  "dependencies": {
    "enquirer": "^2.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "ava": "latest",
    "codecov": "latest",
    "cross-env": "latest",
    "eslint": "latest",
    "eslint-config-xo-lass": "latest",
    "fixpack": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "nyc": "latest",
    "purdy": "^3.5.1",
    "remark-cli": "latest",
    "remark-preset-github": "latest",
    "xo": "latest"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/mirazmamun/stack-glass-problem",
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "awesome-lass",
    "mathematical-problem",
    "nodejs"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ],
    "package.json": [
      "fixpack",
      "git add"
    ]
  },
  "main": "index.js",
  "bin": {
    "stackglass": "./bin/index.js"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 10,
    "functions": 10,
    "branches": 10,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mirazmamun/stack-glass-problem"
  },
  "scripts": {
    "ava": "cross-env NODE_ENV=test ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "nyc": "cross-env NODE_ENV=test nyc ava",
    "test": "npm run lint && npm run ava",
    "test-coverage": "npm run lint && npm run nyc"
  },
  "xo": {
    "prettier": true,
    "tabWidth": 4,
    "tabs": false,
    "space": true,
    "extends": [
      "xo-lass"
    ]
  }
}
